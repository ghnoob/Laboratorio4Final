@model IEnumerable<FinalLaboratorio4.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Proveedores</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Crear nuevo</a>
    </p>    
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> <span>|</span>
                }

                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <span>|</span> <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
