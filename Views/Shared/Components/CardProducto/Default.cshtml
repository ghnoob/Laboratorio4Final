@model FinalLaboratorio4.Models.Producto;

<div class="col-sm-3 mb-3">
    <div class="card h-100">
        <a asp-controller="Productos" asp-action="Details" asp-route-id="@Model.Id" class="text-reset">
            <img class="card-img-top" src="@Model.UrlImagen" alt="imagen del Model" loading="lazy">
        </a>
        <div class="card-body">
            <a asp-controller="Productos" asp-action="Details" asp-route-id="@Model.Id" class="text-reset">
                <h5 class="card-title">@Model.Nombre</h5>
                <h6 class="card-subtitle mb-2 text-muted">@Model.Categoria.Descripcion</h6>
                <p class="card-text">$@Model.Precio</p>
            </a>
            @if(User.Identity.IsAuthenticated)
            {
                <a asp-controller="Productos" asp-action="Edit" asp-route-id="@Model.Id" class="card-link">
                    Editar
                </a>
                <a asp-controller="Productos" asp-action="Delete" asp-route-id="@Model.Id" class="card-link">
                    Borrar
                </a>
            }
        </div>
        <div class="pb-1 pr-1 d-flex flex-row-reverse">
            <div class="js-toggle-favorite" data-id="@Model.Id">
                <i class="@(Model.Favorito ? "fas" : "far") fa-bookmark" id="@($"favorite-{Model.Id}")"></i>
            </div>
        </div>
    </div>
</div>
