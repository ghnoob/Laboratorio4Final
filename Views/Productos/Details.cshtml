@model FinalLaboratorio4.Models.Producto

@{
    ViewData["Title"] = "Detalles";
}

<h1>@Html.DisplayFor(model => model.Nombre)</h1>
<div class="container">
    <div class="row">
        <div class="col-4">
            <img class="img-fluid" src="@Model.UrlImagen">
        </div>
        <div class="col-8">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Favorito)
                </dt>
                <dd class = "col-sm-10">
                    @(Model.Favorito ? "SÃ­" : "No")
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Categoria.Descripcion)
                </dd class>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Marca)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Marca.Descripcion)
                </dd>
            </dl>
        </div>
    </div>
    @if (Model.Proveedores.Any())
    {
        <div class="mt-4">
            <div>
                <h2>Proveedores</h2>
            </div>
            <div>
                <ul class="unstyled">
                    @foreach (Proveedor proveedor in Model.Proveedores)
                    {
                        <a
                            asp-controller="Proveedores"
                            asp-action="Details"
                            asp-route-id="@proveedor.Id"
                        >
                            <li>@proveedor.Nombre</li>
                        </a>
                    }
                </ul>
            </div>
        </div>
    }
    <div class="row mt-4">
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> <span>|</span>
        }
        <a asp-action="Index">Volver a la lista</a>
    </div>
</div>
